
@{
    ViewData["Title"] = "Home Page";
}
@using SampleDotNetCoreWithBootstrap.Models

@{
    var inventoryList = new List<Inventory>();
        inventoryList.Add(new Inventory(00, "Nike", "Amazing", 0000, 1, "5-6-89"));
        inventoryList.Add(new Inventory(01, "Air Jordan", "Amazing", 0001, 2, "5-6-89"));
        inventoryList.Add(new Inventory(02, "New Balance", "Amazing", 0002, 3, "5-6-89"));
        inventoryList.Add(new Inventory(03, "Converse", "Amazing", 0002, 3, "5-6-89"));
}
<table class = "table table-hover">
    <thead class = "text-center">
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>DESCRIPTION</th>
            <th>CODE</th>
            <th>QUANTITY</th>
            <th>DATE</th>
        </tr>
    </thead>
    <tbody class = "text-center">
        @{
            foreach(var Inventory in inventoryList) {
                <tr>
                    <td>@Inventory.ItemID</td>
                    <td>@Inventory.ItemName</td>
                    <td>@Inventory.ItemDescription</td>
                    <td>@Inventory.ItemCode</td>
                    <td>@Inventory.Quantity</td>
                    <td>@Inventory.CreateDate</td>
                </tr>
            }
        }
    </tbody>
</table>
